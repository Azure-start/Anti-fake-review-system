<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lwf.mapper.UsersMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lwf.entity.Users">
        <id column="id" property="id" />
        <result column="address" property="address" />
        <result column="role" property="role" />
        <result column="display_name" property="displayName" />
        <result column="shop_name" property="shopName" />
        <result column="shop_description" property="shopDescription" />
        <result column="shop_logo" property="shopLogo" />
        <result column="shop_status" property="shopStatus" />
        <result column="reputation_score" property="reputationScore" />
        <result column="balance" property="balance" />
        <result column="total_reviews" property="totalReviews" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
    </resultMap>

    <sql id="Base_Column_List">
        id, address, role, display_name, shop_name, shop_description,
       shop_logo, shop_status, reputation_score, balance,
       total_reviews, created_at, updated_at
    </sql>
    <!-- 获取商家统计信息 -->
    <select id="selectMerchantStats" resultType="java.util.Map">
        SELECT
            COUNT(*) as total_merchants,
            COUNT(CASE WHEN shop_status = 'approved' THEN 1 END) as approved_merchants,
            COUNT(CASE WHEN shop_status = 'pending' THEN 1 END) as pending_merchants
        FROM users
        WHERE role = 'merchant'
    </select>

    <!-- 根据地址查询用户 -->
    <select id="selectByAddress" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM users
        WHERE address = #{address}
    </select>

    <!-- 获取待审核商家列表 -->
    <select id="selectPendingMerchants" parameterType="com.baomidou.mybatisplus.extension.plugins.pagination.Page" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM users
        WHERE role = 'merchant' AND shop_status = 'pending'
        ORDER BY created_at DESC
    </select>

    <!-- 更新用户信誉分 -->
    <update id="updateReputationScore">
        UPDATE users
        SET reputation_score = #{reputationScore}, updated_at = NOW()
        WHERE id = #{userId}
    </update>

    <!-- 增加用户评价数 -->
    <update id="incrementTotalReviews">
        UPDATE users
        SET total_reviews = total_reviews + 1, updated_at = NOW()
        WHERE id = #{userId}
    </update>
</mapper>
